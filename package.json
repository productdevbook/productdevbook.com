{
    "name": "productdevbookv1",
    "author": "productdevbook<hi@productdevbook.com>",
    "version": "0.0.1.beta.2",
    "private": true,
    "license": "MIT",
    "description": "There are many developers who develop the best product and cannot make themselves heard. They will now be able to announce them and the best libraries to developers.",
    "productName": "Product Dev Book",
    "homepage": "https://productdevbook.com",
    "scripts": {
      "dev:app": "yarn workspace app dev",
      "build:app": "yarn workspace app build",
      "start:app": "yarn workspace app serve",
      "dev:api": "yarn workspace api dev",
      "build:api": "yarn workspace api build",
      "start:api": "yarn workspace api start",
      "dev": "concurrently --kill-others-on-fail \"yarn dev:app\"  \"yarn dev:api\"",
      "build": "concurrently --kill-others-on-fail \"yarn build:app\"  \"yarn build:api\"",
      "changelog": "npx auto-changelog --output CHANGELOG.md --template keepachangelog --commit-limit false -u --sort-commits date-desc --hide-credit"
    },
    "workspaces": [
      "packages/*"
    ],
    "husky": {
      "hooks": {
        "pre-commit": "lint-staged"
      }
    },
    "lint-staged": {
      "*.{js,ts,jsx,tsx,vue}": [
        "prettier --write",
        "eslint --fix"
      ]
    },
    "dependencies": {
      "concurrently": "6.1.0"
    },
    "devDependencies": {
      "husky": "4.3.8",
      "lint-staged": "11.0.1",
      "prettier": "2.3.2"
    },
    "engines": {
      "node": ">= 16.13.0",
      "npm": ">= 8.1.0",
      "yarn": ">= 1.22.0"
    }
  }